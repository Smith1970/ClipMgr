<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/fragment_main_rule_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp" />
        <TextView
            android:id="@+id/fragment_main_rule_item_action"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />
        <TextView
            android:id="@+id/fragment_main_rule_item_label"
            android:layout_toEndOf="@id/fragment_main_rule_item_icon"
            android:layout_toStartOf="@id/fragment_main_rule_item_action"
            android:layout_alignTop="@id/fragment_main_rule_item_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/fragment_main_rule_item_pkg"
            android:layout_toEndOf="@id/fragment_main_rule_item_icon"
            android:layout_toStartOf="@id/fragment_main_rule_item_action"
            android:layout_alignBottom="@id/fragment_main_rule_item_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end" />
    </RelativeLayout>
</android.support.v7.widget.CardView>